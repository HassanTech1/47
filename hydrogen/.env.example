# Shopify Store Configuration
# الحصول على هذه البيانات من: https://admin.shopify.com/store/YOUR_STORE/settings/apps/development
SESSION_SECRET="your-session-secret-here"
PUBLIC_STORE_DOMAIN="your-store.myshopify.com"
PUBLIC_STOREFRONT_API_TOKEN="your-storefront-access-token"
PRIVATE_STOREFRONT_API_TOKEN="your-private-storefront-token"

# Storefront API Version
PUBLIC_STOREFRONT_API_VERSION="2025-01"

# Customer account info
PUBLIC_CUSTOMER_ACCOUNT_API_CLIENT_ID="your-customer-api-client-id"
PUBLIC_CUSTOMER_ACCOUNT_API_URL="https://shopify.com/YOUR_SHOP_ID"

# Storefront info
PUBLIC_STOREFRONT_ID="your-storefront-id"
SHOP_ID="your-shop-id"

# Optional: Google Analytics
PUBLIC_GOOGLE_ANALYTICS_ID=""

# Optional: Custom Domain
PUBLIC_CUSTOM_DOMAIN=""

# Environment
NODE_ENV="development"
