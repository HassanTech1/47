<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#000000">
    <title>{{ page_title }} - {{ shop.name }}</title>
    <meta name="description" content="{{ page_description | escape }}">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@600&display=swap" rel="stylesheet">

    {{ content_for_header }}

    {{ 'theme-bundle.css' | asset_url | stylesheet_tag }}

    {% assign assets_base = 'theme-bundle.js' | asset_url | remove: 'theme-bundle.js' %}
    <script>window.shopifyAssetsUrl = {{ assets_base | json }};</script>
  </head>
  <body>
    <noscript>You need to enable JavaScript to run this app.</noscript>

    {{ content_for_layout }}

    <script src="{{ 'theme-bundle.js' | asset_url }}" defer></script>
  </body>
</html>
